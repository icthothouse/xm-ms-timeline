<?xml version="1.0" encoding="UTF-8"?>

<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config hazelcast-config-3.6.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <group>
        <name>${group-name}</name>
        <password>${group-pass}</password>
    </group>

    <properties>
        <property name="hazelcast.discovery.enabled">true</property>
        <!--<property name="hazelcast.socket.client.bind.any">false</property>-->
        <!--<property name="hazelcast.socket.server.bind.any">false</property>-->
        <!--<property name="hazelcast.socket.bind.any">false</property>-->
        <property name="hazelcast.local.localAddress">${hazelcast.local.localAddress}</property>
    </properties>

    <management-center enabled="false">http://localhost:8089/mancenter</management-center>
    <network>
        <port auto-increment="true" port-count="100">5701</port>
        <outbound-ports>
            <!--
            Allowed port range when connecting to other nodes.
            0 or * means use system provided port.
            -->
            <ports>0</ports>
        </outbound-ports>
        <join>

            <multicast enabled="false"/>
            <aws enabled="false"/>
            <tcp-ip enabled="true" />

            <discovery-strategies>
                <discovery-strategy enabled="true" class="org.bitsofinfo.hazelcast.discovery.consul.ConsulDiscoveryStrategy">

                    <properties>
                        <property name="consul-host">${consul-host}</property>
                        <property name="consul-port">${consul-port}</property>
                        <property name="consul-service-name">${consul-service-name}</property>
                        <property name="consul-healthy-only">${consul-healthy-only}</property>
                        <property name="consul-service-tags">${consul-service-tags}</property>
                        <property name="consul-discovery-delay-ms">${consul-discovery-delay-ms}</property>

                        <property name="consul-acl-token"></property>
                        <property name="consul-ssl-enabled">false</property>
                        <property name="consul-ssl-server-cert-file-path"></property>
                        <property name="consul-ssl-server-cert-base64"></property>
                        <property name="consul-ssl-server-hostname-verify">true</property>

                        <property name="consul-registrator">com.icthh.xm.commons.config.client.config.CustomDiscoveryNodeRegistrator</property>
                        <property name="consul-registrator-config"><![CDATA[
                        {
                          "preferPublicAddress": true
                        }
                        ]]></property>
                    </properties>
                </discovery-strategy>
            </discovery-strategies>

        </join>
    </network>
    <partition-group enabled="false"/>

</hazelcast>
